[user]
	name = Will Ruggiano
    signingkey = 79303BEC95097CB6

[core]
    excludesfile = ~/.config/git/.gitignore

[credential "https://github.com"]
    helper = !gh auth git-credential

[color]
	ui = auto

[core]
	pager = delta

[interactive]
    diffFilter = delta --color-only

[push]
	default = simple

[merge]
    tool = nvim

[mergetool]
    keepBackup = false

[mergetool "nvim"]
    cmd = nvim -f -c \"Gdiffsplit!\" $MERGED

[alias]
	dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
	br  = branch
  	ci  = commit
  	co  = checkout
  	df  = diff
  	g   = grep -I
  	lg  = log -p
    ll  = log -n1
    lo  = log --oneline
    llo = log -n1 --oneline
  	loq = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
  	pb  = publish-branch
  	rb  = rbranch
  	rc  = rank-contributors
  	rv  = review
  	sm  = show-merges
  	st  = status
    amend = commit -a --amend --no-edit

[color "branch"]
  	current = yellow reverse
  	local   = yellow
  	remote  = green

[color "diff"]
  	meta = yellow 
  	frag = magenta 
  	old  = red 
  	new  = green 

[color "status"]
  	added     = yellow
  	changed   = green
  	untracked = cyan

[delta]
    features = side-by-side line-numbers decorations
    whitespace-error-style = 22 reverse

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none

