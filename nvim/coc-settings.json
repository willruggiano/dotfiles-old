{
    "clangd.semanticHighlighting": true,
    "clangd.arguments": [
        "--log=verbose",
        "--pretty",
        "--all-scopes-completion",
        "--header-insertion-decorators",
        "--enable-config",
        "--background-index"
    ],
    "git.enableGutters": false,
    "signature.target": "float",
    "signature.preferShownAbove": false
}
